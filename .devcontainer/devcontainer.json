{
  "name": "Ubuntu 20.04 with CUDA 11.2 and Miniconda",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": ["--gpus", "all"],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": ["ms-python.python"]
    }
  },
  "remoteUser": "vscode"
}
