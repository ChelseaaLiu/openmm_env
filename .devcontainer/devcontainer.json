{
  "name": "Ubuntu 20.04 with CUDA 11.2 and Miniconda",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": ["--gpus", "all"],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python@2024.22.0",
        "ms-python.debugpy@2024.14.0",
        "ms-python.vscode-pylance@2025.2.1",
        "charliermarsh.ruff",
        "ms-python.isort",
        "ms-vsliveshare.vslivesh"
      ]
    }
  },
  "remoteUser": "vscode"
}
